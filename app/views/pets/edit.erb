<h1>Update Pet</h1>

 <form method="post" action="/pets/<%=@pet.id%>">
 <input id="hidden" type="hidden" name="_method" value="patch"> 

   <label>Name:</label>
   
   <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

   <label>Choose from an existing owner:</label>

   <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"<%='checked' if @pet.owner == owner %>><%=owner.name%> 
  <% end %>

   <label>and/or, create a new owner:</label>
          <br><br>
          <label>name:</label>
            <input type="text" name="owner[name]" id="owner_name">
          <br><br>

   <input type="submit" value="Update Pet">

 </form>
