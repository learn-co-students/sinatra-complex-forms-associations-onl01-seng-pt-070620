<h1>Create a new Pet</h1>
<form method="post" action="/pets">
<input type="text" name="pet[name]" id="pet_name" value="Pet Name"><br>
<% @owners.each do |owner| %>
  <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>">
  <label for="<%= owner.id %>"><%= owner.name %></label><br>
<% end %>
<input type="text" id="owner_name" name="owner[name]" value="New Owner Name"><br>
<input type="submit" name="create_pet" value="Create Pet">
</form>